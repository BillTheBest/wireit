    var mygraphic = new Y.Graphic({render: "#layer"}); 
        // 
        var wire = mygraphic.addShape({
           type: Y.StraightWire,
           stroke: {
               weight: 4,
               color: "rgb(173,216,230)" 
           },
           src: {
             getXY: function() {
               return [300,50];
             }
           },
           tgt: {
             getXY: function() {
               return [700,250];
             }
           }
        });
}); 

