			 <span class="nx">nbOptions</span> <span class="o">=</span> <span class="k">this</span><span class="p">.</span><span class="nx">options</span><span class="p">.</span><span class="nx">selectOptions</span><span class="p">.</span><span class="nx">length</span><span class="o">,</span>
