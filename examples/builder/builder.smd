{
   "SMDVersion":"2.0",
   "description": "JSON-RPC interface for the WireIt language builder",
   
   "envelope":"JSON-RPC-2.0",
   "transport":"POST",
   
   "target":"builder.php",
   
   "services": {
   
      "saveLanguage" : {
         "description": "Save the language",
         "parameters": [
            {"name":"name","type":"string"},
            {"name":"language","type":"text"}
         ]
      },
      
      "listLanguages" : {
         "description": "Get the list of languages",
         "parameters": []
      },
      
      "loadLanguage" : {
         "description": "Load the language",
         "parameters": [
            {"name":"name","type":"string"}
         ]
      },
      
      "deleteLanguage" : {
         "description": "Delete the language",
         "parameters": [
            {"name":"name","type":"string"}
         ]
      }
      
      
   }
}